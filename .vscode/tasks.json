{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean up",
      "type": "shell",
      "command": "make clean",
      "windows": {
        "command": "make clean"
      },
      "group": {
        "kind": "none"
      },
      "problemMatcher": []
    },
    {
      "label": "build: Z80 routines",
      "type": "shell",
      "command": "cd ./src/infrastructure/kernel/asm && make all",
      "windows": {
        "command": "cd .\\src\\infrastructure\\kernel\\asm && make all"
      },
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$gcc",
        {
          "owner": "pasmo",
          "fileLocation": ["relative", "${workspaceFolder}/src/infrastructure/kernel/asm"],
          "pattern": [
            {
              "regexp": "^ERROR on line (\\d+) of file (.+)$",
              "line": 1,
              "file": 2
            },
            {
              "regexp": "^ERROR: (.*)$",
              "message": 1,
              "severity": 4
            }
          ]
        }
      ]
    },
    {
      "label": "build: 64 bits",
      "type": "shell",
      "command": "make debug release",
      "windows": {
        "command": "make PARMS=-m64 debug release"
      },
      "group": {
        "kind": "build"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build: 32 bits",
      "type": "shell",
      "command": "make PARMS=-m32 clean debug release",
      "windows": {
        "command": "make PARMS=-m32 clean debug release"
      },
      "group": {
        "kind": "build"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "test: unit",
      "type": "shell",
      "command": "make test-unit",
      "windows": {
        "command": "make test-unit"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test: integration",
      "type": "shell",
      "command": "make test-integration",
      "windows": {
        "command": "make test-integration"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "test: clean",
      "type": "shell",
      "command": "make test-clean",
      "windows": {
        "command": "make test-clean"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "build all",
      "dependsOn": ["build: Z80 routines", "build: 64 bits"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
