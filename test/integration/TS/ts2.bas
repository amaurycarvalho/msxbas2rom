FILE "sprite1.spr"
FILE "sprite2.spr"

10 SCREEN 2, 2, 0
11 SPRITE LOAD 0
12 GOSUB 100
13 D% = 0 : GOSUB 300
14 D% = 1 : GOSUB 300
15 D% = 2 : GOSUB 300

20 SCREEN 7, 2, 0
21 SPRITE LOAD 1
22 GOSUB 100
23 D% = 0 : GOSUB 300
24 D% = 1 : GOSUB 300
25 D% = 2 : GOSUB 300

30 SCREEN 0
31 END

100 COLOR 15,4,0
101 CLS
102 PUT SPRITE 0, (100,100)
103 PUT SPRITE 1, (100,100)
104 PUT SPRITE 2, (100,100)
200 A$ = INPUT$(1)
201 RETURN

300 SET SPRITE FLIP 0, D%
301 SET SPRITE FLIP 1, D%
302 SET SPRITE FLIP 2, D%
303 GOTO 200

